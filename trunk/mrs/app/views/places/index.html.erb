<h1>Places</h1>


<div class="dictionaryDiv">

<span id="newRecordLink">
<%= link_to 'New place' + image_tag(ApplicationHelper::ADD_IMG), new_place_path %>
</span>

<%= collection_table(@places, :id => 'places', :class => 'dictionaryTable') do |t|
      t.header :name
      t.header :address
      t.header :action, :class => 'actionClass' 
      t.rows.alternate = :odd
      t.rows.each do |row, place, index|
        row.name      place.name
        row.address      place.address
        row.action   link_to(image_tag(ApplicationHelper::EDIT_IMG), edit_place_path(place)) + 
                     link_to(image_tag(ApplicationHelper::DELETE_IMG), edit_place_path(place))  
      end     
    end
%>

</div>
