<div id="speciality_select" >



   <%= collection_select(:speciality, :id, specialities, :id, :name, options ={:prompt => t(:choose_speciality)},
      { :onChange => remote_function( :url => {:action => "speciality_changed"}, :with => "'speciality_id='+this.value")} 
   ) %>

<% if place %>
   <%=   t(:number_of_kinds_of_specialists_in, {:place => place.name, :specialities_count=> specialities.count}) %>

<% end %>

</div>