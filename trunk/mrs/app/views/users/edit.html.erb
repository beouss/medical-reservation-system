<h1> <%= t(:editing_user) %> </h1>

<div id="userEdit">

    <%if @user.has_role? 'doctor' and !@user.has_role? 'admin' %>

    <%= render :partial => "doctor_specialities", :locals => { :doctor => @user } %>
    <%= render :partial => "available_specialities", :locals => { :doctor => @user } %>

    <%= link_to t(:change_worktimes) + image_tag("32x32/clock.png") , user_worktimes_path (@user) %>
    <%= link_to t(:modify_absences) + image_tag("32x32/delete_page.png") , user_absences_path (@user) %>
    <%end%>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <%= f.label :name, t(:name) %>:
  <%= f.text_field :name %>
  <br />
  <%= f.label :email, t(:email) %>:
  <%= f.text_field :email %>
  <br />
  <%= f.submit t(:update) %>
<% end %>

</div>


