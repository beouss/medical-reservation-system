<h1><%= t(:new_worktime) %></h1>
<% form_for (@worktime) do |f| %>

  <%= f.error_messages %>

  <%= f.label :start_date, t(:start_date) %>:
  <%= date_select ("worktime", "start_date") %>
  <br />
  <%= f.label :end_date, t(:end_date) %>:
  <%= date_select ("worktime", "end_date") %>
  <br />
  <%= f.label :since, t(:since) %>:
  <%= time_select ("worktime", "since") %>
  <br />
  <%= f.label :until, t(:until) %>:
  <%= time_select ("worktime", "until") %>
  <br />
  <%= select("worktime", "repetition", Worktime::REPETITIONS) %> 
  <%= collection_select (:worktime, :place_id, @places, :id, :name) %>  
  <%= hidden_field_tag ('worktime[doctor_id]', @user.id)  %>
  <br />
  <%= f.submit t(:add_worktime_to_schedule) %>
<% end %>
