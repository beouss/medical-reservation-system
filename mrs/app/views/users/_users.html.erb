<div id="users">
<table class="dictionaryTable">
  <thead>
  <tr>
    <td>Login</td>
    <td>Name</td>
    <td>Actions</td>
  </tr>
  </thead>
  <tbody>
<% for user in users %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.name %></td>
    <td>
       <%= link_to 'show', user %>
       <%= link_to ' | edit', edit_user_path(user) %>

    <%if user.has_role? 'doctor' and !user.has_role? 'admin' %>
      <%= link_to ' | schedule', user_worktimes_path (user) %>
    <%end%>

    <%if user.has_role? 'doctor' and !user.has_role? 'admin' %>
    <%= link_to ' | absence', user_absences_path (user) %>
    <%end%>

    <%if user.has_role? 'patient' and !user.has_role? 'admin' %>
      <%= link_to ' | visits reservations', patient_visit_reservations_path (user) %></td>
    <%end%>

  </tr>
<% end %>
  </tbody>
</table>

</div>
